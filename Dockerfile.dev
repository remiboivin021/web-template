# Development Dockerfile
FROM node:20-alpine

WORKDIR /app

# Install dependencies for better development experience
RUN apk add --no-cache git

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev dependencies)
RUN npm install

# Copy source code
COPY . .

# Expose ports
EXPOSE 3000 3001

# Start development server
CMD ["npm", "run", "dev"]
